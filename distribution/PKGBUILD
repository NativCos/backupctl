pkgname=backupctl
pkgver=1.0
pkgrel=1
pkgdesc="Backup to a remote location using Borg."
arch=("x86_64")
source=('git+https://stok.cloud/ddkvlvqy/gitea/nikita/backupctl.git#commit=36481818ff1930dbf712e984c79a6818451e9f14')
sha256sums=('SKIP')
makedepends=('borg' 'openssh')
makedepends=('make')

package() {
  cd $srcdir/$pkgname
  make DESTDIR="${pkgdir}" install
}
