pkgname=backupctl
pkgver=18
pkgrel=1
pkgdesc="Backup to a remote location using Borg."
arch=("x86_64")
source=('git+ssh://git@git.nkt.lan:222/nikita/backupctl.git#tag=v18')
sha256sums=('SKIP')
depends=('borg' 'openssh')
makedepends=('make')
backup=(usr/local/etc/backupctl/{conf.json,excludefile})

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="${pkgdir}" install
}
