pkgname=backupctl
pkgver=2.0
pkgrel=1
pkgdesc="Backup to a remote location using Borg."
arch=("x86_64")
source=('git+https://stok.cloud/ddkvlvqy/gitea/nikita/backupctl.git#tag=2.0')
sha256sums=('SKIP')
makedepends=('borg' 'openssh')
makedepends=('make')
backup=(etc/backupctl/{conf,excludefile})

package() {
  cd $srcdir/$pkgname
  make DESTDIR="${pkgdir}" install
}
